{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "namespace": {
      "type": "string",
      "description": "Name of the requested namespace"
    },
    "email": {
      "type": "object",
      "description": "Optional email notification",
      "properties": {
        "manager": {
          "type": "string",
          "format": "email",
          "description": "Email address of the escalation manager"
        }
      }
    }
  }
}